<p><h1>Listando Cegonhas</h1></p>

<%= render 'cegonhas' %>

<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>
<%= will_paginate @cegonhas %>

<br />

<% if current_user.admin? %>
  <%= button('Adicionar Cegonha', new_cegonha_path)%>
  <%= button('Adicionar Cegonha de Outra Transportadora', :action => :new, :cegonha_contratada => true)%>
<% end -%>
