    <th>Valor Pago</th>
    <td>-<%= retorna_valor_monetario(@cegonha.pagamento.valor_pago) %></td>
</tr>
  
<tr>
    <th>Valor Total</th>
    <td><%= retorna_valor_monetario(@cegonha.pagamento.valor_total) %></td>
</tr> 

  <tr>
    <th>Saldo Devedor</th>
    <td><%= retorna_valor_monetario(@cegonha.pagamento.saldo_devedor) %></td>
  </tr>

  <tr>
    <th>Forma de Pagamento</th>
    <td><%= @cegonha.pagamento.forma_pagamento %></td>
  </tr>

  <tr> 
    <th style = "height:50px">Observação</th>
    <td><%= @cegonha.pagamento.observacao %></td>
  </tr>



</table>
<% end -%>
