%p
  %h1= @mensagem
- if !@cegonhas.empty?

  = render 'cegonhas'

  = hidden_field_tag :direction, params[:direction]
  = hidden_field_tag :sort, params[:sort]

.clear

- if current_user.admin?
  = link_to 'Adicionar Cegonha', new_cegonha_path, :class => :button
  = link_to 'Adicionar Cegonha de Outra Transportadora', {:action => :new, :cegonha_contratada => true}, :class => :button
