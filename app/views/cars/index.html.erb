<p><h1>Listando Vendas</h1></p>

<table id="mytable" cellspacing="0" summary="Lista de Vendas">  <tr>
    <th class = 'begin'> <%= sortable "placa" %></th>
    <th><%= sortable "modelo" %> </th>
    <th><%= sortable "firstname", "comprador" %></th>
    <th><%= sortable "status_pagamento", "Status do Pagamento" %></th>
    <th><%= sortable "localizacao", "Localização Atual" %></th>
    <th><%= sortable "Rota" %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% x = 0%>


<% @cars.each do |car| %>

<% if car.status_pagamento.value == 1  
        @row_class = 'nao-pago' 
    elsif car.status_pagamento.value == 2
        @row_class = 'pendente' 
    else
        @row_class = ''; 
    end %>

  <tr>
    <td class = "<%= @row_class %> begin"><%= car.placa %></td>
    <td class = "<%= @row_class %>"><%= car.modelo %></td>
    <td class = "<%= @row_class %>"><%= car.comprador.firstname %> <%= car.comprador.lastname %></td>
    <td class = "<%= @row_class %>"><%= car.status_pagamento.status %></td>
    <td class = "<%= @row_class %>"><%= car.localizacao %></td>
    <td class = "<%= @row_class %>"><%= car.rota_id %></td>
    <td class = "<%= @row_class %>"><%= link_to 'Detalhes', car %></td>
    <td class = "<%= @row_class %>"><%= link_to 'Editar', edit_car_path(car) %></td>
    <td class = "<%= @row_class %>"><%= link_to 'Apagar', car, confirm: 'Tem certeza que deseja apagar a venda? Esta ação é irreversível!', method: :delete %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @cars %>

<br />

<%= button('Nova Venda', new_car_path)%>
