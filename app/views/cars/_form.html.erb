<%= form_for(@car) do |f| %>

  <% if @car.errors.any? %>
    <div id="error_explanation">
      <h1><%= pluralize(@car.errors.count, "error") %> impediram que a compra fosse salva:</h1>
      
      <ul>
      <% @car.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      
      </ul>
    </div>
  <% end %>

<% if @car.empresa %>
