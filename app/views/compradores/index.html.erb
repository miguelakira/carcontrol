
 <p><h1><%= @mensagem_compradores %> </h1></p>

<br />
<p><h1> <%= @mensagem_empresas %> </h1></p>
<table  id="empresas" class="display"  style = "float: left;">
    <thead>

  <tr>
    <th width = 150px>Nome</th>
    <th width = 100px>Email</th>
    <th width = 80px>CNPJ</th>
    <th width = 80px>Telefone</th>
    <th width = 80px>Celular</th>
    <th width = 100px>Carros <br>Comprados</th>
    <th width = 80px>Valor Pago <br> Total</th>
    <th width = 80px>Saldo <br> Devedor</th>

  </tr>
</thead>
<tbody>
<% @empresas.each do |empresa| %>

  <tr>
    <td><%= empresa.nome %> <%= link_to image_tag("edit_local.png", :border=>0), edit_empresa_path(empresa, :empresa => empresa.id), :class => 'right'  %></td>
    <td><%= empresa.email %></td>
    <td><%= empresa.cnpj %></td>
    <td><%= empresa.telefone %></td>
    <td><%= empresa.celular %></td>
    <td><%= carros_do_comprador(empresa).html_safe %></td>
    <td><%= retorna_valor_monetario(soma_dos_pagamentos_efetuados(empresa)) %> </td>
    <td><%= retorna_valor_monetario(saldo_devedor_do_cliente(empresa)) %></td>

  </tr>
<% end %>
</tbody>
</table>

<br />
